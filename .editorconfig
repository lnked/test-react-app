# editorconfig.org
root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
max_line_length = 80
trim_trailing_whitespace = true
insert_final_newline = true

[*.js]
file_type = jsx

[*.{json,js,jsx,html,css}]
indent_style = space
indent_size = 4

[{.babelrc, .eslintrc, .stylelintrc}]
syntax = json
file_type = json

[.flowconfig]
syntax = shell
file_type = shell

[.eslintrc]
indent_style = space
indent_size = 4

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[*.{css, scss, sass}]
syntax = postcss, scss, sass, css
file_type = postcss, scss, sass, css

[COMMIT_EDITMSG]
max_line_length = 0
